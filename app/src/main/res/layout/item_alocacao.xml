<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/itemAlocacaoTira"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@color/colorButton"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/itemAlocacaoNomeOrganizador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="bia"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="@id/itemAlocacaoTira"
                app:layout_constraintEnd_toEndOf="@id/itemAlocacaoTira"
                app:layout_constraintStart_toEndOf="@id/itemAlocacaoHorarioInicio"
                app:layout_constraintTop_toTopOf="@id/itemAlocacaoTira"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintHorizontal_bias="0.0"/>

            <TextView
                android:id="@+id/itemAlocacaoDescricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reuniao com cliente para aprovacao\ndos layouts do projeto pedido"
                android:textColor="@android:color/black"
                android:gravity="start"
                app:layout_constraintBottom_toBottomOf="@id/itemAlocacaoTira"
                app:layout_constraintEnd_toEndOf="@id/itemAlocacaoTira"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/itemAlocacaoNomeOrganizador"
                app:layout_constraintTop_toBottomOf="@id/itemAlocacaoNomeOrganizador"
                app:layout_constraintVertical_bias="0.0" />


            <TextView
                android:id="@+id/itemAlocacaoHorarioInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:layout_marginLeft="25dp"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.35000002" />

            <TextView
                android:id="@+id/itemAlocacaoHorarioFim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="00:00"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="@id/itemAlocacaoTira"
                app:layout_constraintEnd_toEndOf="@id/itemAlocacaoTira"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/itemAlocacaoHorarioInicio"
                app:layout_constraintTop_toBottomOf="@id/itemAlocacaoHorarioInicio"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>