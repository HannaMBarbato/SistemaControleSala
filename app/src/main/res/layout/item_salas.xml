<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".listaSalas.ListaSalasView">

    <androidx.cardview.widget.CardView
        android:id="@+id/itemSalaCardview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        android:clickable="true"
        android:onClick="clickCardView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/itemSalaImagem"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:foreground="@android:drawable/screen_background_dark_transparent"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/recife_pe"/>

            <TextView
                android:id="@+id/itemSalaTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conselho Jedi"
                android:textColor="@android:color/white"
                android:textSize="30dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/itemSalaImagem"
                app:layout_constraintEnd_toEndOf="@id/itemSalaImagem"
                app:layout_constraintStart_toStartOf="@id/itemSalaImagem"
                app:layout_constraintTop_toTopOf="@id/itemSalaImagem" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>